<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d0e9ec"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Interruption Filter None (ON DoD)" />

    <Button
        android:id="@+id/btn_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Interruption Filter All (OFF DoD)" />

    <Button
        android:id="@+id/btn_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Interruption Filter Priority" />

    <Button
        android:id="@+id/btn_alarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Interruption Filter Alarms" />
</LinearLayout>